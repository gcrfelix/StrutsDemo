<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

	<action-mappings>
		<action path="/home" type="com.pageManager.action.HomeAction">
			<forward name="success" path="/home.jsp" />
		</action>
		<action path="/content" type="com.pageManager.action.ContentAction">
			<forward name="success" path="/content.jsp" />
		</action>
		<action path="/post" type="com.pageManager.action.PostAction">
			<forward name="success" path="/post.jsp" />
		</action>
	</action-mappings>

</struts-config>